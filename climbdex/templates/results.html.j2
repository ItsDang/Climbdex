<!-- The Modal -->
<div class="modal fade" id="tickModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tick, Rate and Comment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
                  <div>
                    <h4 id="modal-climb-name"></h4>
                    <p id="modal-climb-stats"></p>
                  </div>
        <form id="ratingForm">
          <div class="form-group">
            <div class="star-rating">
              <input type="radio" id="star3" name="rating" value="2">
              <label for="star3">&#9733;</label>
              <input type="radio" id="star2" name="rating" value="1">
              <label for="star2">&#9733;</label>
              <input type="radio" id="star1" name="rating" value="0">
              <label for="star1">&#9733;</label>
            </div>
          </div>
          <div class="form-group">
            <div class="btn-group btn-group-toggle d-flex" data-toggle="buttons">
              <label class="btn btn-outline-primary flex-fill">
                <input type="radio" name="attemptType" id="flash" autocomplete="off"> Flash
              </label>
              <label class="btn btn-outline-primary flex-fill">
                <input type="radio" name="attemptType" id="redpoint" autocomplete="off"> Redpoint
              </label>
              <label class="btn btn-outline-primary flex-fill">
                <input type="radio" name="attemptType" id="attempt" autocomplete="off"> Attempt
              </label>
            </div>
          </div>
          <div class="form-group" id="attemptsSection" style="display: none;">
            <div class="input-group">
              <div class="input-group-prepend">
                <button class="btn btn-outline-secondary" type="button" id="decreaseAttempts">-</button>
              </div>
              <input type="text" class="form-control text-center" id="attempts" value="1 try" readonly>
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="increaseAttempts">+</button>
              </div>
            </div>
          </div>

          <script>
            $(document).ready(function () {
              $('input[name="attemptType"]').change(function () {
                if ($(this).attr('id') === 'flash') {
                  $('#attemptsSection').hide();
                } else {
                  $('#attemptsSection').show();
                }
              });
            });

            function updateAttemptsDisplay(value) {
              return value + (value === 1 ? ' try' : ' tries');
            }

            document.getElementById('increaseAttempts').addEventListener('click', function () {
              var attemptsInput = document.getElementById('attempts');
              var numericValue = parseInt(attemptsInput.value);
              if (numericValue < 10) {
                attemptsInput.value = updateAttemptsDisplay(numericValue + 1);
              }
            });

            document.getElementById('decreaseAttempts').addEventListener('click', function () {
              var attemptsInput = document.getElementById('attempts');
              var numericValue = parseInt(attemptsInput.value);
              if (numericValue > 1) {
                attemptsInput.value = updateAttemptsDisplay(numericValue - 1);
              }
            });
          </script>
   
          <div class="form-group">
            <label for="comment">Comment:</label>
            <textarea class="form-control" id="comment" rows="3" placeholder="Add comments, beta, notes..."></textarea>
          </div>
        </form>
